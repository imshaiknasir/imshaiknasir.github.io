---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Shaik Nasir Ahemad">
  <Navigation />
  
  <main class="pt-24">
    <div class="container min-h-[60vh] flex flex-col items-center justify-center py-16">
      <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
      <h2 class="text-2xl font-medium mb-8">Page Not Found</h2>
      <p class="text-center max-w-md mb-8">
        The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
      </p>
      <a href="/" class="btn btn-primary">Return to Homepage</a>
    </div>
  </main>
  
  <Footer />
</Layout> 